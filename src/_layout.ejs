    <script src="./env.js"></script>
    <script src="./js/miscellaneous.js"></script>
    <script src="./js/user.js"></script>
    <script src="./js/schoolEditor.js"></script>
    <script src="./js/schoolReviewer.js"></script>
    <script src="./js/office.js"></script>
    <script src="./js/student.js"></script>
    <script>
        function openLoading() {
            $('body').loading();
            $('.loading-overlay').css({'z-index': 11111, top: 0});
        }

        function stopLoading() {
            $('body').loading('stop');
        }

        openLoading();

        if(!Browser.checkBrowserSupport()) {
            alert('請使用 Chrome, Firefox, Safari 或 Edge 版本 > 14 的瀏覽器。');
            window.history.back();
        }
    </script>
</head>
<body>
<div id="app" class="container-fluid">
    <% if (current.source != 'login') { -%>
    <%- partial("components/_sidebar")%>
    <% } else { -%>
    <%- partial("login")%>
    <% } -%>
    <footer>
        <div class="row">
            <div class="col-12 text-center">
            </div>
        </div>
    </footer>
</div>
<script src="./js/<%= current.source %>.js"></script>
</body>
</html>
